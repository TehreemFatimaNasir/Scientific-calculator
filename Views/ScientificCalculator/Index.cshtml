@model scientific_calculator.Models.ScientificCalculator

@{
    ViewData["Title"] = "Scientific Calculator";
}

<h2>Scientific Calculator</h2>

<form method="post">
    <label>Enter First Number:</label>
    <input type="number" name="num1" required />

    <label>Enter Second Number (if needed):</label>
    <input type="number" name="num2" />

    <label>Select Operation:</label>
    <select name="operation">
        <option value="Add">Addition (+)</option>
        <option value="Subtract">Subtraction (-)</option>
        <option value="Multiply">Multiplication (×)</option>
        <option value="Divide">Division (÷)</option>
        <option value="SquareRoot">Square Root (√)</option>
        <option value="Sin">Sin (sin)</option>
        <option value="Cos">Cosine (cos)</option>
        <option value="Tan">Tangent (tan)</option>
    </select>

    <button type="submit">Calculate</button>
</form>

@if (ViewBag.Result != null)
{
    <div id="result">
        <h3>Result: @ViewBag.Result</h3>
    </div>
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to right, #0f6161, #008080);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        flex-direction: column;
    }

    .container {
        text-align: center;
        width: 80%;
        max-width: 600px;
    }

    h1 {
        color: black;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        background: #121212;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        width: 100%;
    }

    label {
        color: white;
        font-size: 1.2em;
    }

    input, select {
        width: 80%;
        padding: 10px;
        font-size: 1em;
        border-radius: 8px;
        border: none;
    }

    button {
        width: 80%;
        padding: 10px;
        font-size: 1.2em;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        background: #ff9500;
        color: white;
        cursor: pointer;
    }

        button:hover {
            background: #cc7a00;
        }

    #result {
        margin-top: 20px;
        font-size: 2.5em;
        font-weight: bold;
        color: #ffeb3b;
        background: #222;
        padding: 15px;
        border-radius: 10px;
        width: 80%;
        text-align: center;
        box-shadow: 0 5px 20px rgba(255, 235, 59, 0.4);
    }
</style>
